function updater() {
  $.post('/plugins/<?=$plugin?>/include/ProgressInfo.php',{disk:0,time:180},function(data){
    $('#disk-status').html(data);
    $('input[value="_(Find)_"]').prop('disabled',$('#export-status').html().search('green-text')==-1);
